@model AppUser

<div class="bg-primary m-1 p-1">
    <h4>Edit User</h4>
</div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <div hidden class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
       <a href="#" id="ChangePasswordBtn" >Change Password </a>
    </div>
    <div id="ChangePasswordDiv" >
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="editPassword" name="password" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" id="editConfirmPassword" class="form-control" />
        </div>
    </div>
    <button id="editbtnSubmit" type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script>
    $("#Users").addClass("active");
</script>