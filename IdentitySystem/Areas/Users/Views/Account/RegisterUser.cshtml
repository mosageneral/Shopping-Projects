

@{
    Layout = null;
}


@model RegisterUser

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lumino - Login</title>
    <link href="~/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Admin/css/datepicker3.css" rel="stylesheet">
    <link href="~/Admin/css/styles.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">RigsterUser</div>
                <div class="panel-body">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form enctype="multipart/form-data" asp-action="RegisterUser" method="post">
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label> Select Profile Pic</label>
                            <input type="file" name="Image" id="Image" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" id="ConfirmPassword" class="form-control" />
                        </div>
                        <button id="btnRigster" type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->

    <script src="~/Admin/js/jquery-1.11.1.min.js"></script>
    <script src="~/Admin/js/bootstrap.min.js"></script>
</body>
</html>


