@model Models.Models.Products

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<h2>@Html.DisplayFor(model => model.Price)</h2>
<h3>@Html.DisplayFor(model => model.OFF)</h3>


<div>
    <h4>@Html.DisplayFor(model => model.Category.Name)</h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MainImage)
        </dt>
        <dd class="col-sm-10">

            <img style="width:100px;height:100px;" src="~/Files/ProductsImages/@Html.DisplayFor(model => model.MainImage)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Images)

        </dt>
        <dd class="col-sm-10">
            <div class="row">


                @foreach (var image in ViewBag.Images)
                {

                    <img class="img-thumbnail" style="width:100px;height:100px;margin:10px;" src="~/Files/ProductsImages/@image" />
                }
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sold)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sold)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">

        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
<script>
    $("#Products").addClass("active");
</script>