@model IEnumerable<Models.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateProduct">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
    @Html.DisplayNameFor(model => model.OFF)
</th>
            <th>
                @Html.DisplayNameFor(model => model.MainImage)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Sold)
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
              <img style="width:100px;height:100px;" src="~/Files/ProductsImages/@Html.DisplayFor(modelItem => item.MainImage)" />  
            </td>
           
           
            <td>
                @Html.DisplayFor(modelItem => item.Sold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                
                @Html.ActionLink("Details", "Details", new {  Id=@item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new { Id = @item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $("#Products").addClass("active");
</script>